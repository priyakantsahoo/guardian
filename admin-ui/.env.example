# Guardian Admin UI Environment Configuration
# Copy this file to .env and update the values

# Guardian Auth Service Configuration
GUARDIAN_CLIENT_ID=your_client_id_from_registration
GUARDIAN_CLIENT_KEY=your_client_key_from_registration

# API URLs
REACT_APP_API_URL=http://localhost:3002
REACT_APP_PROXY_URL=http://localhost:3002

# Backend Configuration (for proxy server)
BACKEND_URL=http://guardian-auth:8084

# Port Configuration
UI_PORT=80
PROXY_PORT=3002

# Domain Configuration (for reverse proxy/Traefik)
DOMAIN=your-domain.com

# Optional: Custom Nginx Configuration
# NGINX_CONF_PATH=./nginx.conf

# Development Configuration
NODE_ENV=production